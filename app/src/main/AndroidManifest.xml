<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.heli.heliandroidui">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AnimalActivity" />
        <activity
            android:name=".ArchitectureActivity"
            android:theme="@style/AppTheme"
             />
        <activity
            android:name=".FoodActivity"
            android:label="@string/title_activity_food"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PostersActivity"
            android:label="@string/title_activity_posters"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SceneriesActivity"
            android:label="@string/title_activity_sceneries"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>